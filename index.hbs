{{!< default}}

<section class="section-featured">
    <div class="section-featured__content">
        <div class="row">
            {{> "tags-list"}}
        </div>

        <div class="row">
            <div class="col-2-of-3">
                {{#get "posts" limit=1 filter="featured:true" include="tags,authors"}}
                    {{#foreach posts}}
                        {{> "featured-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
            <div class="col-1-of-3">

            </div>
        </div>
    </div>
</section>

{{!< default}}

<section class="section-featured">
    <section class="section-featured__content">
        <div class="row">
            {{> "tags-list"}}
        </div>

        <div class="row">
            <div class="col-2-of-3">
                {{#get "posts" limit=1 filter="featured:true" include="tags,authors"}}
                    {{#foreach posts}}
                        {{> "featured-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
            <div class="col-1-of-3">
                <h4 class="heading-four u-margin-bottom-medium">Popular articles</h4>
                <div class="section-featured__featured-list">
                    {{#get "posts" limit="all" filter="featured:true"}}
                        {{#foreach posts}}
                            {{> "featured-card-search"}}
                        {{/foreach}}
                    {{/get}}
                </div>
            </div>
        </div>
    </section>

    <section class="section-post-list">
        {{#get "posts" limit="all" filter="featured:false" include="tags,authors"}}
            {{#foreach posts columns=3}}
                {{#if @rowStart}}<div class="row">{{/if}}
                    <div class="col-1-of-3">
                        {{> "post-card"}}
                    </div>
                {{#if @rowEnd}}</div>{{/if}}
            {{/foreach}}
        {{/get}}
    </section>

</section>
